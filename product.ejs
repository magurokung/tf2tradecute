<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Products - MAGURO</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    body {
      min-height: 100vh;
    }

    .product-container {
      max-width: 1400px;
      margin: 2rem auto;
      padding: 0 2rem;
      margin-top: 120px;
    }

    .page-header {
      text-align: center;
      margin-bottom: 3rem;
      color: #333;
    }

    .page-title {
      font-size: 2.5rem;
      font-weight: 600;
      margin-bottom: 0.5rem;
      color: #ddd;
    }

    .page-subtitle {
      font-size: 1.1rem;
      color: #ffffff;
      font-weight: 400;
    }

    .category-filter {
      text-align: center;
      margin-bottom: 3rem;
    }

    .filter-wrapper {
      display: inline-block;
      position: relative;
    }

    .category-filter select {
      padding: 0.8rem 2.5rem 0.8rem 1rem;
      font-size: 1rem;
      border-radius: 8px;
      border: 1px solid #ddd;
      background: white;
      cursor: pointer;
      appearance: none;
      min-width: 180px;
      font-weight: 500;
      color: #333;
    }

    .category-filter select:focus {
      outline: none;
      border-color: #ff7f50;
    }

    .filter-wrapper::after {
      content: '\f078';
      font-family: 'Font Awesome 6 Free';
      font-weight: 900;
      position: absolute;
      right: 0.8rem;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
      pointer-events: none;
    }

    .filter-label {
      display: block;
      color: #ffffff;
      font-size: 1rem;
      font-weight: 500;
      margin-bottom: 0.8rem;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 2rem;
      margin-bottom: 3rem;
    }

    @media (max-width: 1200px) {
      .product-grid {
        grid-template-columns: repeat(3, 1fr);
      }
    }

    @media (max-width: 900px) {
      .product-grid {
        grid-template-columns: repeat(2, 1fr);
      }
    }

    @media (max-width: 600px) {
      .product-grid {
        grid-template-columns: 1fr;
      }
    }

    .product-card {
      backdrop-filter: blur(10px);
      border-radius: 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
      overflow: hidden;
      display: flex;
      flex-direction: column;
      border: 1px solid #eee;
    }

    .product-card:hover {
      box-shadow: 0 4px 16px rgba(0,0,0,0.12);
    }

    .product-image {
      height: 220px;
      object-fit: cover;
      width: 100%;
    }

    .product-info {
      padding: 1.5rem;
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .product-name {
      font-weight: 700;
      font-size: 1.2rem;
      margin-bottom: 0.5rem;
      color: #ffffff;
      line-height: 1.3;
    }

    .product-description {
      font-size: 0.95rem;
      color: #ffffff;
      margin-bottom: auto;
      line-height: 1.5;
    }

    .product-footer {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 1rem;
    }

    .product-price {
      color: #27ae60;
      font-size: 1.2rem;
      font-weight: 600;
    }

    .buy-btn {
      background: #50c8ff;
      border: none;
      padding: 0.6rem 1.2rem;
      border-radius: 6px;
      color: white;
      cursor: pointer;
      font-weight: 500;
      font-size: 0.9rem;
      display: flex;
      align-items: center;
      gap: 0.4rem;
    }

    .buy-btn:hover {
      background: #35b2ff;
    }

    .buy-btn i {
      font-size: 1rem;
    }

    /* Loading animation for product cards */
    .product-card {
      animation: fadeInUp 0.6s ease forwards;
      opacity: 0;
      transform: translateY(30px);
    }

    .product-card:nth-child(1) { animation-delay: 0.1s; }
    .product-card:nth-child(2) { animation-delay: 0.2s; }
    .product-card:nth-child(3) { animation-delay: 0.3s; }
    .product-card:nth-child(4) { animation-delay: 0.4s; }
    .product-card:nth-child(5) { animation-delay: 0.5s; }
    .product-card:nth-child(6) { animation-delay: 0.6s; }
    .product-card:nth-child(7) { animation-delay: 0.7s; }
    .product-card:nth-child(8) { animation-delay: 0.8s; }

    @keyframes fadeInUp {
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Empty state */
    .empty-state {
      text-align: center;
      color: white;
      padding: 4rem 2rem;
    }

    .empty-state i {
      font-size: 4rem;
      margin-bottom: 1rem;
      opacity: 0.7;
    }

    .empty-state h3 {
      font-size: 1.5rem;
      margin-bottom: 0.5rem;
    }

    .empty-state p {
      opacity: 0.8;
    }
  </style>
</head>
<body>
 <%- include('./partials/navbar', { user: user }) %>

 <div class="product-container">
   <!-- Page Header -->
   <div class="page-header">
     <h1 class="page-title">Products</h1>
     <p class="page-subtitle">Discover amazing products crafted with excellence</p>
   </div>

   <!-- Category Filter -->
   <div class="category-filter">
     <form method="GET" action="/product">
       <label for="category" class="filter-label">Select Category</label>
       <div class="filter-wrapper">
         <select name="category" id="category" onchange="this.form.submit()">
           <option value="">All Categories</option>
           <% categories.forEach(cat => { %>
             <option value="<%= cat._id %>" <%= selectedCategory == cat._id ? 'selected' : '' %>><%= cat.name %></option>
           <% }) %>
         </select>
       </div>
     </form>
   </div>

   <!-- Product Grid -->
   <% if (products.length > 0) { %>
     <div class="product-grid">
       <% products.forEach(product => { %>
         <div class="product-card">
           <img src="<%= product.imageUrl %>" class="product-image" alt="<%= product.name %>">
           <div class="product-info">
             <div class="product-name"><%= product.name %></div>
             <div class="product-description"><%= product.description %></div>
             <div class="product-footer">
               <div class="product-price">$<%= product.price.toFixed(2) %></div>
               <form method="POST" action="/buy/<%= product._id %>">
                 <button class="buy-btn">
                   <i class="fas fa-cart-plus"></i>
                   Buy
                 </button>
               </form>
             </div>
           </div>
         </div>
       <% }) %>
     </div>
   <% } else { %>
     <div class="empty-state">
       <i class="fas fa-box-open"></i>
       <h3>No Products Found</h3>
       <p>Try selecting a different category or check back later for new products.</p>
     </div>
   <% } %>
 </div>

 <%- include('./partials/footer') %>

 <!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const error = urlParams.get('error');
  const success = urlParams.get('success');

  if (error || success) {
  const alertType = error ? 'error' : 'success';
  const alertText = error || success;

  Swal.fire({
    icon: alertType,
    title: alertType === 'error' ? 'Error' : 'Success',
    text: alertText,
  }).then(() => {
    window.history.replaceState(null, null, window.location.pathname);
  });
}

</script>

</body>
</html>