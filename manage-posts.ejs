<!DOCTYPE html>
<html lang="th">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Manage Posts - MAGURO</title>
  <link rel="stylesheet" href="/css/style.css" />
  <style>
    main {
      margin-top: 150px;
      padding: 2rem;
      font-family: 'Inter', sans-serif;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
    }

    h1 {
      text-align: center;
      font-size: 2rem;
      font-weight: 700;
      color: #ffffff;
      margin-bottom: 2rem;
    }

    .post-grid {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 1.5rem;
    }

    .post-card {
      background: rgba(255, 255, 255, 0.06);
      backdrop-filter: blur(6px);
      border: 1px solid rgba(255, 255, 255, 0.08);
      border-radius: 10px;
      overflow: hidden;
      box-shadow: none;
      transition: none;
    }

    .post-card:hover {
      transform: none;
      box-shadow: none;
    }


    .post-card img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }


    .post-content {
      padding: 1.5rem;
    }

    .post-info {
      margin-bottom: 1rem;
    }

    .info-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 0.5rem;
      padding: 0.5rem 0;
    }

    .info-label {
      font-weight: 600;
      color: #ffffff;
    }

    .info-value {
      color: #ffffff;
    }

    .delete-button {
      width: 100%;
      padding: 0.6rem;
      background-color: #ef4444;
      color: #fff;
      border: none;
      border-radius: 6px;
      font-weight: 500;
      cursor: pointer;
      transition: background-color 0.2s ease;
    }

    .delete-button:hover {
      background-color: #dc2626;
    }


    .empty-message {
      text-align: center;
      color: #b4b6ba;
      font-size: 1.125rem;
      padding: 3rem 2rem;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      backdrop-filter: blur(5px);
    }

    .modal-content {
      position: relative;
      margin: auto;
      display: block;
      width: 85%;
      max-width: 700px;
      max-height: 80%;
      object-fit: contain;
      top: 50%;
      transform: translateY(-50%);
      border-radius: 10px;
      box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
      animation: none;
    }

    .delete-modal {
      display: none;
      position: fixed;
      z-index: 2000;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.85);
      backdrop-filter: blur(4px);
      justify-content: center;
      align-items: center;
    }

    .delete-modal-content {
      background: #1a1a1a;
      padding: 2rem;
      border-radius: 10px;
      max-width: 400px;
      width: 90%;
      color: white;
      text-align: center;
      position: relative;
      border: 1px solid #333;
    }

    .delete-title {
      font-size: 1.4rem;
      margin-bottom: 1rem;
      font-weight: 700;
    }

    .delete-text {
      font-size: 1rem;
      color: #ccc;
      margin-bottom: 2rem;
      line-height: 1.6;
    }

    .delete-actions {
      display: flex;
      justify-content: center;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .delete-btn {
      padding: 10px 20px;
      font-weight: 600;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 14px;
      width: 120px;
    }

    .delete-btn.cancel {
      background: #666;
      color: white;
    }

    .delete-btn.cancel:hover {
      background: #777;
    }

    .delete-btn.confirm {
      background: #e74c3c;
      color: white;
    }

    .delete-btn.confirm:hover {
      background: #c0392b;
    }

    .delete-modal .close {
      position: absolute;
      top: 15px;
      right: 20px;
      font-size: 24px;
      color: #aaa;
      cursor: pointer;
    }

    .delete-modal .close:hover {
      color: #fff;
    }


    @keyframes zoom {
      from {
        transform: scale(0) translateY(-50%);
      }

      to {
        transform: scale(1) translateY(-50%);
      }
    }

    .close {
      position: absolute;
      top: 15px;
      right: 35px;
      color: #f1f1f1;
      font-size: 40px;
      font-weight: bold;
      transition: 0.3s;
      cursor: pointer;
    }

    .close:hover,
    .close:focus {
      color: #bbb;
      text-decoration: none;
    }

    @media (max-width: 768px) {
      .post-grid {
        grid-template-columns: 1fr;
      }

      main {
        padding: 1rem;
      }

      h1 {
        font-size: 1.5rem;
      }

      .modal-content {
        width: 95%;
        max-height: 70%;
      }

      .close {
        top: 10px;
        right: 25px;
        font-size: 30px;
      }
    }

    @media (max-width: 480px) {
      .delete-modal-content {
        padding: 1.5rem 1rem;
      }

      .delete-btn {
        width: 100%;
        font-size: 15px;
      }

      .delete-actions {
        flex-direction: column;
      }
    }
  </style>
</head>

<body>
  <%- include('partials/navbar', { user }) %>

    <main>
      <h1>üìã Manage Posts</h1>
      <div class="container">

        <% const approvedPosts=posts.filter(post=> post.status === 'approved'); %>

          <% if (approvedPosts.length===0) { %>
            <p class="empty-message">No approved posts yet.</p>
            <% } else { %>
              <div class="post-grid">
                <% approvedPosts.forEach(post=> { %>
                  <div class="post-card">
                    <img src="<%= post.imageUrl %>" alt="Post Image" />

                    <div class="post-content">
                      <div class="post-info">
                        <div class="info-item">
                          <span class="info-label">By:</span>
                          <span class="info-value">
                            <%= post.user_name || 'Anonymous' %>
                          </span>
                        </div>
                        <div class="info-item">
                          <span class="info-label">(Steam ID):</span>
                          <span class="info-value">
                            <%= post.userId || 'Anonymous' %>
                          </span>
                        </div>
                      </div>

                      <form method="POST" action="/admin/posts/<%= post._id %>?_method=DELETE" class="delete-form">
                        <button type="button" class="delete-button open-delete-modal" data-post-id="<%= post._id %>">
                          üóëÔ∏è Delete Post
                        </button>
                      </form>

                    </div>
                  </div>
                  <% }) %>
              </div>
              <% } %>
                <div id="imageModal" class="modal">
                  <span class="close">&times;</span>
                  <img class="modal-content" id="modalImage">
                </div>
      </div>
    </main>
    <!-- Delete Confirmation Modal -->
    <div id="deleteModal" class="modal delete-modal">
      <div class="delete-modal-content">
        <span class="close" id="closeDeleteModal">&times;</span>
        <h3 class="delete-title">Confirm Delete Post</h3>
        <p class="delete-text">Are you sure you want to delete this post?<br>This action cannot be undone.</p>
        <div class="delete-actions">
          <button id="cancelDelete" class="delete-btn cancel">Cancel</button>
          <button id="confirmDelete" class="delete-btn confirm">Delete</button>
        </div>
      </div>
    </div>



    <%- include('partials/footer') %>
      <script>
        document.addEventListener('DOMContentLoaded', function () {
          const modal = document.getElementById('imageModal');
          const modalImg = document.getElementById('modalImage');
          const closeBtn = document.getElementsByClassName('close')[0];

          // ‡πÄ‡∏û‡∏¥‡πà‡∏° event listener ‡πÉ‡∏´‡πâ‡∏Å‡∏±‡∏ö‡∏£‡∏π‡∏õ‡∏†‡∏≤‡∏û‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
          const images = document.querySelectorAll('.post-card img');

          images.forEach(function (img) {
            img.addEventListener('click', function () {
              modal.style.display = 'block';
              modalImg.src = this.src;
            });
          });

          // ‡∏õ‡∏¥‡∏î modal ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î X
          closeBtn.addEventListener('click', function () {
            modal.style.display = 'none';
          });

          // ‡∏õ‡∏¥‡∏î modal ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà‡∏ß‡πà‡∏≤‡∏á
          modal.addEventListener('click', function (e) {
            if (e.target === modal) {
              modal.style.display = 'none';
            }
          });

          // ‡∏õ‡∏¥‡∏î modal ‡πÄ‡∏°‡∏∑‡πà‡∏≠‡∏Å‡∏î ESC
          document.addEventListener('keydown', function (e) {
            if (e.key === 'Escape' && modal.style.display === 'block') {
              modal.style.display = 'none';
            }
          });
        });

        let deleteFormToSubmit = null;

        // ‡πÄ‡∏õ‡∏¥‡∏î modal ‡∏•‡∏ö
        document.querySelectorAll('.open-delete-modal').forEach(button => {
          button.addEventListener('click', function () {
            const form = this.closest('form');
            deleteFormToSubmit = form;
            document.getElementById('deleteModal').style.display = 'flex';
          });
        });

        // ‡∏õ‡∏¥‡∏î modal
        document.getElementById('closeDeleteModal').addEventListener('click', function () {
          document.getElementById('deleteModal').style.display = 'none';
          deleteFormToSubmit = null;
        });

        document.getElementById('cancelDelete').addEventListener('click', function () {
          document.getElementById('deleteModal').style.display = 'none';
          deleteFormToSubmit = null;
        });

        // ‡∏¢‡∏∑‡∏ô‡∏¢‡∏±‡∏ô‡∏Å‡∏≤‡∏£‡∏•‡∏ö
        document.getElementById('confirmDelete').addEventListener('click', function () {
          if (deleteFormToSubmit) {
            deleteFormToSubmit.submit();
          }
        });

      </script>
</body>

</html>