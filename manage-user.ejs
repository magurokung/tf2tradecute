    // Delete selected users
    function deleteSelected() {
      const selected = document.querySelectorAll('.user-select:checked');
      if (selected.length === 0) {
        Swal.fire({
          icon: 'warning',
          title: 'No items selected.',
          text: 'Please select the user(s) to delete.',
